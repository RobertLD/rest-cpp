{
    "version": 3,
    "configurePresets": [
        {
            "name": "DEV",
            "displayName": "Dev (tests+perf)",
            "binaryDir": "${sourceDir}/build/",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "REST_CPP_BUILD_TESTS": "ON",
                "CMAKE_CXX_STANDARD": "20",
                "REST_CPP_BUILD_PERF": "ON",
                "CMAKE_C_COMPILER_LAUNCHER": "ccache",
                "CMAKE_CXX_COMPILER_LAUNCHER": "ccache",
                "CMAKE_TOOLCHAIN_FILE": "${env:HOME}/vcpkg/scripts/buildsystems/vcpkg.cmake"
            }
        },
        {
            "name": "perf-release",
            "displayName": "Perf (Release)",
            "binaryDir": "${sourceDir}/build/perf-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "REST_CPP_BUILD_TESTS": "ON",
                "CMAKE_CXX_STANDARD": "20",
                "REST_CPP_BUILD_PERF": "ON",
                "INTERPROCEDURAL_OPTIMIZATION": "ON",
                "CMAKE_TOOLCHAIN_FILE": "${env:HOME}/vcpkg/scripts/buildsystems/vcpkg.cmake"
            }
        }
    ]
}